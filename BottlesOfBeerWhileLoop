public class BottlesOfBeer{

     public static void main(String []args){
        int bottlenumber = 99;
        while(bottlenumber >= 1){
            System.out.println(bottlenumber + " bottles of beer on the wall, "+ bottlenumber + " bottles of beer");
            bottlenumber--;
            System.out.println("Take one down and pass it around, " + bottlenumber + " bottles of beer on the wall");
        }
     }
}
